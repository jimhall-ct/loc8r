extends layout

block content
  .row.banner
    .col-12
      h1 Starcups
  .row
    .col-12.col-lg-9
      .row.no-gutters
        .col-12.col-md-6
          p.rating
            i.fa.fa-star
            i.fa.fa-star
            i.fa.fa-star
            i.fa.fa-star-o
            i.fa.fa-star-o
          p 125 High Street, Reading RG6 1PS
          .card.card-primary
            .card-block
              h2.card-title Opening Hours
              p.card-text Mon - Fri: 7:00am - 7:00pm
              p.card-text Sat: 8:00am - 5:00pm
              p.card-text Sun: closed
          .card.card-primary
            .card-block
              h2.card-title Facilities
              span.badge.badge-warning
                i.fa.fa-check
                | &nbsp;Hot Drinks
              | &nbsp;
              span.badge.badge-warning
                i.fa.fa-check
